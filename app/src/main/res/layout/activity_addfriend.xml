<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_addfriend_layout"
    android:clickable="true">

    <LinearLayout
        android:background="#4b4c4f"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tvBack"
            android:text="返回"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="搜索好友"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:background="#2727"
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>

    <SearchView
        android:id="@+id/SearchView_add"
        android:queryHint="用户名/昵称"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></SearchView>

    <LinearLayout

        android:background="#2727"
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:background="#2727"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/address_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="手机通讯录"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:background="#2727"
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ListView
        android:id="@+id/ListView_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    </LinearLayout>

    </LinearLayout>


</LinearLayout>