<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvFromName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivHead"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ivHead"
        android:layout_toRightOf="@+id/ivHead"
        android:text="用户名"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivHead"
        android:layout_alignLeft="@+id/tvFromName"
        android:layout_alignStart="@+id/tvFromName"
        android:text="备注" />

    <Button
        android:id="@+id/btAccept"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="接受"
        android:background="#92D862"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignTop="@+id/tvFromName"
        android:layout_toLeftOf="@+id/btRefuse"
        android:layout_toStartOf="@+id/btRefuse" />

    <Button
        android:id="@+id/btRefuse"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="拒绝"
        android:background="#92D862"
        android:layout_alignBaseline="@+id/btAccept"
        android:layout_alignBottom="@+id/btAccept"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivHead"
        android:layout_alignStart="@+id/ivHead"
        android:layout_below="@+id/btRefuse"
        android:text="2017-09-25" />

</RelativeLayout>