<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_address_layout"
    android:clickable="true">

    <RelativeLayout
        android:background="@color/TitleBarBgColor"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="通讯录"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ibAdd"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_person_add_white_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>

    <SearchView
        android:id="@+id/SearchView_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></SearchView>
    <LinearLayout
        android:background="@color/SpaceBgColor"
        android:layout_width="match_parent"
        android:layout_height="15dp"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout_NewFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/ic_person_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="新的朋友"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/SpaceBgColor"
        android:layout_width="match_parent"
        android:layout_height="15dp"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecycleView_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tvFriendCount"
                android:text="总共0位好友"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>