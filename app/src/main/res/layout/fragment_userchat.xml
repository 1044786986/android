<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:id="@+id/linearLayout_UserChat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4b4c4f"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户名"
            android:textColor="#fff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivMessage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="13dp"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/address_normal" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvBack"
            android:layout_toRightOf="@+id/tvBack"
            android:text=""
            android:textColor="#fff"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>


    <LinearLayout
        android:background="#272727"
        android:layout_width="match_parent"
        android:layout_height="1px"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ivVoice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/search_ic_mic_black_24dp" />

        <ImageView
            android:id="@+id/ivSendImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ivVoice"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/add_address" />

        <Button
            android:text="按住说话"
            android:id="@+id/btVoicing"
            android:layout_width="wrap_content"
            android:ems="18"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_alignTop="@+id/ivVoice"
            android:layout_toRightOf="@+id/ivVoice" />

        <EditText
            android:id="@+id/etMessage"
            android:background="@drawable/bg_editview"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="14"
            android:clickable="true"
            android:imeOptions="actionSend"
            android:inputType="textLongMessage"
            android:maxLines="5"
            android:layout_alignTop="@+id/ivVoice"
            android:layout_toRightOf="@+id/ivVoice" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout_SendImage"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivAlbum"
                android:src="@drawable/album"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:text="相册"
                android:textSize="15dp"
                android:layout_marginLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivCamera"
                android:src="@drawable/camera"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:text="拍照"
                android:textSize="15dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>