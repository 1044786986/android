<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDate"
            android:text="2017"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFriendHead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/address_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFriendText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/chatto_bg_focused"
                android:gravity="center_vertical"
                android:text="我是珊珊"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/ivFriendImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivVoice_left"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="-110dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/chatto_bg_focused"
            android:src="@drawable/voice" />

        <TextView
            android:id="@+id/tvVoiceLeft"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="6S" />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvVoiceRight"
                        android:text="6s"
                        android:textSize="20dp"
                        android:layout_marginTop="-8dp"
                        android:layout_marginLeft="180dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvMyText"
                    android:text="我是好好"
                    android:textSize="18dp"
                    android:background="@drawable/chatto_bg_focused"
                    android:textDirection="rtl"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                </LinearLayout>

        <ImageView
            android:id="@+id/ivMyImage"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="100dp" />

            </LinearLayout>


        <ImageView
            android:id="@+id/ivVoice_right"
            android:src="@drawable/voice"
            android:background="@drawable/chatto_bg_focused"
            android:layout_marginLeft="-105dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />


        <ImageView
            android:id="@+id/ivMyHead"
            android:src="@drawable/address_normal"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />


        </LinearLayout>


</LinearLayout>